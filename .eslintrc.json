{
  "extends": "google",
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "comma-dangle": ["error", "never"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "max-len": ["error", { "code": 140 }],
    "object-curly-spacing": ["error", "always"],
    "require-jsdoc": "off"
  }
}
